{
  "manifest_version": 2,
  "name": "EveryDollar Balance",
  "version": "0.1",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "clipboardWrite"],
   "content_scripts": [
       {
           "run_at": "document_idle",
           "matches": ["https://www.everydollar.com/*"],
           "js": ["content.js"]
       }
   ]
}
